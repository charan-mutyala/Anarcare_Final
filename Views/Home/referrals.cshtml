@{
    ViewData["Title"] = "Referrals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<main class="referrals-main">
    <!-- Title and Subtitle -->
    <h1 class="referrals-title">Intake Form</h1>

    <!-- Subtitle aligned under form -->
    <section class="referrals-header">
        <div class="referrals-text">
            <p class="referrals-subtitle">
                We are here to support your loved ones with compassionate care. Please fill out the form below to submit a referral.
            </p>
        </div>
    </section>

    <!-- Layout: Image on Left, Form on Right -->
    <section class="referral-layout">
        <!-- Image Left -->
        <div class="referral-image-box">
            <img src="~/images/Refferals.webp" alt="Doctor with Patient" />
            <p class="image-caption">"Your referral can make a difference in someone’s life."</p>
        </div>

        <!-- Form Right -->
        <div class="referral-form-box">
            @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }
            <form class="referral-form" method="post" asp-action="SubmitReferral">
            <h2>Patient's Referral Form</h2>

            <label for="patient-name">Patient’s name</label>
            <input type="text" id="patient-name" name="PatientName" placeholder="Name" required />

            <label for="phone">Phone</label>
            <input type="tel" id="phone" name="Phone" placeholder="Phone Number" required />

            <label for="referral-parties-name">Referral’s party name</label>
            <input type="text" id="referral-parties-name" name="ReferrerName" placeholder="Name" required />
            
            <label for="services">Services Needed:</label>
            <select name="ServicesNeeded" id="services" required>
                <option value="">-- Select a Service --</option>
                <option value="Skilled Nursing">Skilled Nursing</option>
                <option value="Medical Social Worker">Medical Social Worker</option>
                <option value="Home Health Aides">Home Health Aides</option>
                <option value="Occupational Therapy">Occupational Therapy</option>
                <option value="Physical Therapy">Physical Therapy</option>
                <option value="Speech Therapy">Speech Therapy</option>
                <option value="Chaplain or Spiritual Counselor">Chaplain or Spiritual Counselor</option>
                <option value="Counseling">Counseling</option>
                <option value="DME">DME</option>
                <option value="Other">Other</option>
            </select>
            
            <input type="text" id="other-service" name="OtherService" placeholder="Specify other service" />


            <label for="comments">Comments:</label>
            <textarea id="comments" name="Comments" placeholder="Tell us what do you want to know"></textarea>

            <button type="submit" class="submit-btn">SUBMIT</button>
        </form>

        </div>
    </section>
</main>
